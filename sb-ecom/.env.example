# ==============================================
# Spring Boot E-Commerce Application
# Environment Variables Template
# ==============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ==============================================
# Database Configuration
# ==============================================
# PostgreSQL (Production/Development)
DB_URL=jdbc:postgresql://localhost:5432/ecommerce
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# Alternative: H2 Database (Testing)
# DB_URL=jdbc:h2:mem:test
# DB_USERNAME=sa
# DB_PASSWORD=

# ==============================================
# JWT Security Configuration
# ==============================================
# IMPORTANT: Change this to a strong, unique secret in production!
JWT_SECRET=your-super-secret-jwt-key-minimum-256-bits-long
JWT_EXPIRATION_MS=86400000
JWT_COOKIE_NAME=springBootEcom

# ==============================================
# Application Configuration
# ==============================================
PROJECT_IMAGE_DIR=images/
FRONTEND_ALLOWED_ORIGINS=http://localhost:3000/,http://localhost:5173/
IMAGE_BASE_URL=http://localhost:8080/images

# ==============================================
# External API Keys
# ==============================================
# Stripe Payment Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# ==============================================
# Server Configuration
# ==============================================
# Default port is 8080, uncomment to override
# SERVER_PORT=5000

# ==============================================
# Production Settings (Optional)
# ==============================================
# Cookie domain for subdomains (e.g., .yourdomain.com)
# COOKIE_DOMAIN=.example.com

# ==============================================
# Development/Debug Settings
# ==============================================
# Set to true to enable debug logging
DEBUG_ENABLED=false
SQL_DEBUG_ENABLED=false
SECURITY_DEBUG_ENABLED=false

# ==============================================
# Environment Profiles
# ==============================================
# Uncomment to set active profile
# SPRING_PROFILES_ACTIVE=dev
# SPRING_PROFILES_ACTIVE=prod

# ==============================================
# Example Production Values
# ==============================================
# DB_URL=jdbc:postgresql://prod-db-host:5432/ecommerce_prod
# DB_USERNAME=prod_user
# DB_PASSWORD=super_secure_prod_password
# JWT_SECRET=production-grade-secret-key-very-long-and-random
# FRONTEND_ALLOWED_ORIGINS=https://yourdomain.com/
# IMAGE_BASE_URL=https://yourdomain.com/images
# STRIPE_SECRET_KEY=sk_live_your_live_stripe_key
# SERVER_PORT=8080
# COOKIE_DOMAIN=.yourdomain.com